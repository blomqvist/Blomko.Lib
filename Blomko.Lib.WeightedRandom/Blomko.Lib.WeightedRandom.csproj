<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Description>Creates a weighted random distribution. Can be used when certain values should occure more or less than when using Random. Values and distribution weight is supplied into the constructor. WeightedRandom.Next() can then be called to get the next value.</Description>
    <PackageLicenseExpression />
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Authors>Niklas Blomqvist</Authors>
    <Company>Korkade Mockasiner AB</Company>
    <RepositoryUrl>https://github.com/blomqvist/Blomko.Lib</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>weighted random, biased random</PackageTags>
    <PackageProjectUrl>https://github.com/blomqvist/Blomko.Lib</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile></DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
